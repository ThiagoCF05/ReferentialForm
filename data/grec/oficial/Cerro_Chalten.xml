					<REFEX CASE="nominative" EMPHATIC="no" HEAD="pronoun" TYPE="pronoun">It</REFEX>
				</ORIGINAL-REFEX>
			</REFERENCE>
			<STRING> also attracts many photographers thanks to  </STRING>
			<REFERENCE ID="12" PARAGRAPH-POSITION="61" PARAGRAPH-RECENCY="7" SEMCAT="mountain" SENTENCE-POSITION="8" SENTENCE-RECENCY="7" SYNCAT="subj-det">
