					<REFEX CASE="plain" EMPHATIC="no" HEAD="nominal" TYPE="description">The mountain</REFEX>
				</ORIGINAL-REFEX>
			</REFERENCE>
			<STRING> has a reputation of being &quot;ultimate,&quot; despite  </STRING>
			<REFERENCE ID="9" PARAGRAPH-POSITION="9" PARAGRAPH-RECENCY="8" SEMCAT="mountain" SENTENCE-POSITION="9" SENTENCE-RECENCY="8" SYNCAT="subj-det">
