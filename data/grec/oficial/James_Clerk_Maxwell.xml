				</ORIGINAL-REFEX>
			</REFERENCE>
			<STRING> birthday, Einstein described  </STRING>
			<REFERENCE ID="10" PARAGRAPH-POSITION="53" PARAGRAPH-RECENCY="4" SEMCAT="person" SENTENCE-POSITION="12" SENTENCE-RECENCY="4" SYNCAT="subj-det">
