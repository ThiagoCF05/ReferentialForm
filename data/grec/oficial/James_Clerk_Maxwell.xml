		</SENTENCE>
		<SENTENCE ID="3.2">
			<REFERENCE ID="12" PARAGRAPH-POSITION="15" PARAGRAPH-RECENCY="2" SEMCAT="person" SENTENCE-POSITION="1" SENTENCE-RECENCY="0" SYNCAT="np-subj">
				<ORIGINAL-REFEX>
					<REFEX CASE="plain" EMPHATIC="no" HEAD="nominal" TYPE="name">Maxwell</REFEX>
				</ORIGINAL-REFEX>
