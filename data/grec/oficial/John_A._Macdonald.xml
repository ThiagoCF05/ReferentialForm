					<REFEX CASE="plain" EMPHATIC="no" HEAD="nominal" TYPE="name">Macdonald</REFEX>
				</ORIGINAL-REFEX>
			</REFERENCE>
			<STRING> became a lawyer in 1834 and  </STRING>
			<REFERENCE ID="8" PARAGRAPH-POSITION="8" PARAGRAPH-RECENCY="7" SEMCAT="person" SENTENCE-POSITION="8" SENTENCE-RECENCY="7" SYNCAT="np-subj">
