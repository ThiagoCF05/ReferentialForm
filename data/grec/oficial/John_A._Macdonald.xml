					<REFEX CASE="plain" EMPHATIC="no" HEAD="nominal" TYPE="name">Macdonald</REFEX>
				</ORIGINAL-REFEX>
			</REFERENCE>
			<STRING> married  </STRING>
			<REFERENCE ID="16" PARAGRAPH-POSITION="10" PARAGRAPH-RECENCY="2" SEMCAT="person" SENTENCE-POSITION="10" SENTENCE-RECENCY="2" SYNCAT="subj-det">
				<ORIGINAL-REFEX>
					<REFEX CASE="genitive" EMPHATIC="no" HEAD="pronoun" TYPE="pronoun">his</REFEX>
				</ORIGINAL-REFEX>
			</REFERENCE>
			<STRING> second wife Susan Agnes Bernard (1836-1920).</STRING>
		</SENTENCE>
		<SENTENCE ID="4.2">
			<STRING>They had one daughter, Margaret Mary Theodora Macdonald (1869-1933), who was born with hydrocephalus and suffered from physical and mental disabilities.</STRING>
		</SENTENCE>
		<SENTENCE ID="4.3">
			<REFERENCE ID="17" PARAGRAPH-POSITION="38" PARAGRAPH-RECENCY="28" SEMCAT="person" SENTENCE-POSITION="1" SENTENCE-RECENCY="0" SYNCAT="np-subj">
