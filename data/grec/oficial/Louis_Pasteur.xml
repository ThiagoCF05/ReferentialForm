		</SENTENCE>
		<SENTENCE ID="1.4">
			<REFERENCE ID="5" PARAGRAPH-POSITION="52" PARAGRAPH-RECENCY="7" SEMCAT="person" SENTENCE-POSITION="1" SENTENCE-RECENCY="0" SYNCAT="np-subj">
