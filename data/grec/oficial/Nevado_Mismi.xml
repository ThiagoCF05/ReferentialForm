	<PARAGRAPH ID="3">
		<SENTENCE ID="3.1">
			<STRING>In 2001, it was verified that the main headwater of the Amazon River has its glacial source on  </STRING>
			<REFERENCE ID="5" PARAGRAPH-POSITION="19" PARAGRAPH-RECENCY="0" SEMCAT="mountain" SENTENCE-POSITION="19" SENTENCE-RECENCY="0" SYNCAT="np-obj">
