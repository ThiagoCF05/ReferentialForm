		</SENTENCE>
		<SENTENCE ID="4.5">
			<REFERENCE ID="18" PARAGRAPH-POSITION="110" PARAGRAPH-RECENCY="24" SEMCAT="person" SENTENCE-POSITION="1" SENTENCE-RECENCY="0" SYNCAT="np-subj">
