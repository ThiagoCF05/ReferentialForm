<TEXT ID="1375">
	<TITLE>Solomon Islands</TITLE>
	<PARAGRAPH ID="1">
		<SENTENCE ID="1.1">
			<REFERENCE ID="1" PARAGRAPH-POSITION="1" PARAGRAPH-RECENCY="0" SEMCAT="country" SENTENCE-POSITION="1" SENTENCE-RECENCY="0" SYNCAT="np-subj">
				<ORIGINAL-REFEX>
					<REFEX CASE="plain" EMPHATIC="no" HEAD="nominal" TYPE="name">The Solomon Islands</REFEX>
				</ORIGINAL-REFEX>
			</REFERENCE>
			<STRING> is a nation in Melanesia, east of Papua New Guinea, consisting of nearly one thousand islands.</STRING>
		</SENTENCE>
		<SENTENCE ID="1.2">
			<STRING>Together  </STRING>
			<REFERENCE ID="2" PARAGRAPH-POSITION="19" PARAGRAPH-RECENCY="18" SEMCAT="country" SENTENCE-POSITION="2" SENTENCE-RECENCY="0" SYNCAT="np-subj">
