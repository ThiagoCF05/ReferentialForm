				</ORIGINAL-REFEX>
			</REFERENCE>
			<STRING>.</STRING>
		</SENTENCE>
		<SENTENCE ID="2.4">
			<STRING>Self-government was achieved in 1976 and independence two years later.</STRING>
		</SENTENCE>
		<SENTENCE ID="2.5">
			<REFERENCE ID="6" PARAGRAPH-POSITION="47" PARAGRAPH-RECENCY="11" SEMCAT="country" SENTENCE-POSITION="1" SENTENCE-RECENCY="0" SYNCAT="np-subj">
