	</PARAGRAPH>
	<PARAGRAPH ID="2">
		<SENTENCE ID="2.1">
			<STRING>A strategic naval link between West Asia and South East Asia,  </STRING>
			<REFERENCE ID="4" PARAGRAPH-POSITION="12" PARAGRAPH-RECENCY="0" SEMCAT="country" SENTENCE-POSITION="12" SENTENCE-RECENCY="0" SYNCAT="np-subj">
