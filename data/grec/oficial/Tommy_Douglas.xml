		<SENTENCE ID="1.3">
			<REFERENCE ID="7" PARAGRAPH-POSITION="98" PARAGRAPH-RECENCY="9" SEMCAT="person" SENTENCE-POSITION="1" SENTENCE-RECENCY="0" SYNCAT="np-subj">
