		</SENTENCE>
		<SENTENCE ID="1.4">
			<STRING>According to a survey in 2006,  </STRING>
			<REFERENCE ID="4" PARAGRAPH-POSITION="79" PARAGRAPH-RECENCY="18" SEMCAT="city" SENTENCE-POSITION="7" SENTENCE-RECENCY="0" SYNCAT="np-subj">
