			<ORIGINAL-REFEX>
				<REFEX CASE="" EMPHATIC="" HEAD="" TYPE="empty">_</REFEX>
			</ORIGINAL-REFEX>
		</REFERENCE>
		<STRING> nearly died from fever. </STRING>
		<REFERENCE ID="13" SEMCAT="person" SYNCAT="subj-det">
			<ORIGINAL-REFEX>
				<REFEX CASE="genitive" EMPHATIC="no" HEAD="pronoun" TYPE="pronoun">His</REFEX>
			</ORIGINAL-REFEX>
		</REFERENCE>
		<STRING> heroics earned </STRING>
		<REFERENCE ID="14" SEMCAT="person" SYNCAT="np-obj">
			<ORIGINAL-REFEX>
				<REFEX CASE="accusative" EMPHATIC="no" HEAD="pronoun" TYPE="pronoun">him</REFEX>
			</ORIGINAL-REFEX>
