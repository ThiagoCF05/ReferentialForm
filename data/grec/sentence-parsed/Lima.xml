<TEXT ID="1098">
	<TITLE>Lima</TITLE>
	<PARAGRAPH ID="1">
		<SENTENCE ID="1.1">
			<REFERENCE ID="1" SEMCAT="city" SYNCAT="np-subj">
				<ORIGINAL-REFEX>
					<REFEX CASE="plain" EMPHATIC="no" HEAD="nominal" TYPE="name">Lima</REFEX>
				</ORIGINAL-REFEX>
			</REFERENCE>
			<STRING> is the capital and largest city in Peru, as well as the capital of Lima Province.</STRING>
		</SENTENCE>
		<SENTENCE ID="1.2">
			<REFERENCE ID="2" SEMCAT="city" SYNCAT="np-subj">
