			<REFERENCE ID="11" SEMCAT="person" SYNCAT="np-subj">
				<ORIGINAL-REFEX>
					<REFEX CASE="plain" EMPHATIC="no" HEAD="nominal" TYPE="name">Weir</REFEX>
				</ORIGINAL-REFEX>
