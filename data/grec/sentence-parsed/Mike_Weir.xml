		<SENTENCE ID="2.2">
			<REFERENCE ID="3" SEMCAT="person" SYNCAT="np-subj">
				<ORIGINAL-REFEX>
					<REFEX CASE="nominative" EMPHATIC="no" HEAD="pronoun" TYPE="pronoun">He</REFEX>
				</ORIGINAL-REFEX>
			</REFERENCE>
			<STRING> is a graduate of Brigham Young University (majoring in Recreation Management), and  </STRING>
			<REFERENCE ID="4" SEMCAT="person" SYNCAT="np-subj">
				<ORIGINAL-REFEX>
					<REFEX CASE="nominative" EMPHATIC="no" HEAD="pronoun" TYPE="pronoun">he</REFEX>
				</ORIGINAL-REFEX>
			</REFERENCE>
