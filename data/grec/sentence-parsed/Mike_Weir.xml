		</SENTENCE>
		<SENTENCE ID="3.2">
			<REFERENCE ID="8" SEMCAT="person" SYNCAT="np-subj">
				<ORIGINAL-REFEX>
					<REFEX CASE="plain" EMPHATIC="no" HEAD="nominal" TYPE="name">Mike</REFEX>
				</ORIGINAL-REFEX>
