<TEXT ID="880">
	<TITLE>The Brocken</TITLE>
	<PARAGRAPH ID="1">
		<SENTENCE ID="1.1">
			<REFERENCE ID="1" SEMCAT="mountain" SYNCAT="np-subj">
				<ORIGINAL-REFEX>
					<REFEX CASE="plain" EMPHATIC="no" HEAD="nominal" TYPE="name">The Brocken</REFEX>
				</ORIGINAL-REFEX>
			</REFERENCE>
			<STRING>, or Blocksberg, is the highest peak in the Harz Mountains in Germany and also the highest peak of northern Germany;  </STRING>
			<REFERENCE ID="2" SEMCAT="mountain" SYNCAT="np-subj">
				<ORIGINAL-REFEX>
					<REFEX CASE="nominative" EMPHATIC="no" HEAD="pronoun" TYPE="pronoun">it</REFEX>
				</ORIGINAL-REFEX>
			</REFERENCE>
			<STRING> is located between the rivers Weser and Elbe.</STRING>
		</SENTENCE>
		<SENTENCE ID="1.2">
			<STRING>Although  </STRING>
			<REFERENCE ID="3" SEMCAT="mountain" SYNCAT="subj-det">
				<ORIGINAL-REFEX>
					<REFEX CASE="genitive" EMPHATIC="no" HEAD="pronoun" TYPE="pronoun">its</REFEX>
				</ORIGINAL-REFEX>
			</REFERENCE>
			<STRING> altitude (1,141 metres) is below alpine dimensions,  </STRING>
			<REFERENCE ID="4" SEMCAT="mountain" SYNCAT="subj-det">
				<ORIGINAL-REFEX>
					<REFEX CASE="genitive" EMPHATIC="no" HEAD="pronoun" TYPE="pronoun">its</REFEX>
				</ORIGINAL-REFEX>
			</REFERENCE>
